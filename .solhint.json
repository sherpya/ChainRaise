{
  "extends": "solhint:recommended",
  "rules": {
    "max-line-length": "off",
    "compiler-version": ["warn", "^0.8.0"],
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "no-empty-blocks": "off",
    "reason-string": "off",
    "not-rely-on-time": "off"
  }
}
